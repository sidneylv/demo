@import '../../core/var'
@import '../../core/mix'

.page--small
	.container
		margin 120px auto 110px
		width $container--small-width
		background #fff	
	.logo
		display block
		margin 0 auto
		padding-top 34px
		width 80px
		height 98px
	.register-box,
	.c-tab--first
		margin-top 3px
		padding 0 195px
		.form-horizontal
			margin-top 38px
			.control-group--custom
				margin-top 30px
			.validate-error
				margin-top 8px	
	.link-register
		padding 65px 0 60px 0
		text-align center
		font-size 16px
		color #989898
		a
			color #989898
	.footer-bd
		background-color #eaeeef
		color #686868
	.footer-nav
		a
			color #686868

.checkbox-label
	>input
		width 16px
		height 16px
		vertical-align -2px

.validate-error
	padding-left 28px
	background url('/static/image/sign_warn.png') no-repeat 0 50%
	font-size 16px
	color #f2734a

.register-box
	.title
		margin-top 26px
		text-align center
		font-size 28px
		color #333

.entrance-remotecase
	padding 210px 0 110px
	text-align center

.register-success
	padding-top 210px
	text-align center
	font-size 32px
	color #e80707
	>img
		margin-right 15px
		vertical-align -6px

.auto-jump
	font-size 14px		